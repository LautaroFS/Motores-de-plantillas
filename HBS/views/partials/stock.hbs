{{#if empty}}
<div class="bg-info p-5 rounded">
    <h2 class="text-center text-warning">
        LISTA DE PRODUCTOS VACIA
    </h2>
</div>
{{#if empty}}
<h3 class=" m-5 alert alert-warning">No hay productos cargados.</h3>
{{/if}}
{{else}}
<table class="table">
    <thead>
        <tr>
            <th scope="col">Nombre</th>
            <th scope="col">Precio</th>
            <th scope="col">Imagen</th>
        </tr>
    </thead>
    <tbody>
        {{#each products}}
        <tr>
            <td>{{this.nombre}}</td>
            <td>$ {{this.precio}}</td>
            <td><img src={{prod.img}} alt="" width=50px height=50px></td>
        </tr>
        {{/each}}
    </tbody>
</table>
</table>
{{/if}}